doctype html
html
  head
      block head
        title="Express Starter App"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet")
  body

    if locals.authenticated
      div.nav-outer-div
        div.left
          div
            a(href="/"): img(src='https://roll20.net/v3/assets/img/logos/fiasco.png')
          div
            h1= title
        div.right
          a(href= `/profile/${user.id}`): img(src= locals.user.avatarUrl)
          div.form
            form(action='/users/logout' method="POST")
              button(type="submit") Logout
    else
      div.nav-outer-div
        div.logo
           a(href="/"): img(src='https://roll20.net/v3/assets/img/logos/fiasco.png')
        div.auth-btns
          a(href="/users/login"): button.button(type="button" ) Login
          a(href="/users/signup"): button.button(type="button" ) Signup

    block content
